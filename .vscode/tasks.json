{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceRoot}/Source/main.cpp",
                "${workspaceRoot}/Source/Zipper/Zipper.cpp",
                "-L",
                "${workspaceRoot}/Lib",
                "-l",
                "z",
                "-Wall"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}